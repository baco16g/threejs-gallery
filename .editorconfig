root = true

# プロジェクトファイル
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[*.html]
indent_style = tab
indent_size = 2


# スケルトンファイル
[*.md]
indent_style = tab
indent_size = 2

[.eslintrc]
indent_style = tab
indent_size = 2

[.stylintrc]
indent_style = tab
indent_size = 2

[*.js]
indent_style = tab
indent_size = 2
